{
	"extends": ["eslint:recommended"],
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module"
	},
	"plugins": ["json"],
	"env": { "es6": true, "node": true, "jest": true },
	"globals": {
		"jasmine": false
	},
	"rules": {
		// noise from eslint:all
		"camelcase": 0,
		"capitalized-comments": 0,
		"guard-for-in": 0,
		"id-length": 0,
		"indent": 0,
		"max-depth": 0,
		"max-len": 0,
		"max-params": 0,
		"max-statements": 0,
		"newline-after-var": 0,
		"newline-before-return": 0,
		"no-continue": 0,
		"no-else-return": 0,
		"no-eq-null": 0,
		"no-magic-numbers": 0,
		"no-plusplus": 0,
		"no-process-env": 0,
		"no-prototype-builtins": 0,
		"no-underscore-dangle": 0,
		"object-curly-newline": 0,
		"object-curly-spacing": 0,
		"object-property-newline": 0,
		"object-shorthand": 0,
		"one-var": 0,
		"one-var-declaration-per-line": 0,
		"padded-blocks": 0,
		"prefer-destructuring": 0,
		"prefer-template": 0,
		"quote-props": 0,
		"quotes": 0,
		"require-jsdoc": 0,
		"sort-imports": 0,
		"sort-keys": 0,
		"spaced-comment": 0,

		// experiment with good style for es6
		"arrow-body-style": 0,
		"arrow-parens": 2,
		"func-style": [2, "declaration"],
		"no-param-reassign": 0,
		"no-var": 2,
		"prefer-arrow-callback": 0,
		"prefer-spread": 2,
		"prefer-promise-reject-errors": 2,
		"space-infix-ops": 2,
		"strict": 2,

		// maybe fix?
		"consistent-this": [1, "thisContext"],
		"no-shadow": 1,
		"vars-on-top": 0,

		// disable, too aggressive?
		"comma-dangle": 0,
		"no-class-assign": 0,
		"no-console": 0,
		"no-constant-condition": 0,
		"no-empty": 0,
		"no-case-declarations": 0,
		"prefer-const": 0,

		// enforce additional style
		"no-unused-vars": [2, {"vars": "local", "args": "none"}],
		"accessor-pairs": 2,
		"block-scoped-var": 2,
		"brace-style": [2, "1tbs", { "allowSingleLine": true }],
		"comma-spacing": 2,
		"comma-style": 2,
		"curly": 2,
		"dot-location": [2, "property"],
		"eqeqeq": [2, "allow-null"],
		"linebreak-style": 0,
		"no-bitwise": 2,
		"no-div-regex": 2,
		"no-nested-ternary": 2,
		"no-self-compare": 2,
		"no-spaced-func": 2,
		"no-throw-literal": 2,
		"no-trailing-spaces": 2,
		"no-undef": 2,
		"no-use-before-define": [2, "nofunc"],
		"semi": 2,
		"semi-spacing": 2,
		"space-before-blocks": 2,
		"space-before-function-paren": [2, {"anonymous": "always", "named": "never"}],
		"keyword-spacing": 2,
		"wrap-iife": [2, "any"],
		"yoda": 2
	}
}
